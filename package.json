    "**/*.css": [
      "stylelint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@mdx-js/loader": "^1.6.21",
    "@next/mdx": "^10.0.1",
