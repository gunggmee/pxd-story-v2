  "private": true,
  "scripts": {
    "dev": "next dev --hostname 0.0.0.0",
    "build": "next build",
    "export": "next export",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint --fix '**/*.css'",
    "lint:js": "tsc --noEmit && eslint --fix --ext .js,.jsx,.ts,.tsx .",
